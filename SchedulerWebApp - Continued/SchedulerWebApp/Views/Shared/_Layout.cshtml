<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Scheduleasy.com</title>
    @Styles.Render("~/Content/css")
    <link href='https://fonts.googleapis.com/css?family=Oxygen:400,700,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    @RenderSection("styles", false)
    @Styles.Render("~/Content/customStyle")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/ico" href="~/Images/favicon.ico">


</head>
<body>


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Scheduler", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Events <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("My Events", "Index", "Events")</li>
                            <li>@Html.ActionLink("New Event", "Create", "Events")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Contacts <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("My Contacts", "Index", "Contacts")</li>
                            <li>@Html.ActionLink("New Contact", "Create", "Contacts")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li>@Html.ActionLink("FAQ", "FrequentlyAskedQuestions", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container body-content">
        <div class="body-div">
            <div class="row centered-row">
                <div class=" center-block body-firstRow">
                    @RenderBody()
                </div>
            </div>
        </div>

        <div class="navbar navbar-inverse " role="navigation">
            <div class="container">
                <div class="navbar-text pull-left">
                    <p>&copy; @DateTime.Now.Year - Schedule easy</p>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    <script type="text/javascript">
        $(window).bind("load", function () {
            fixContainerHeight();
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>