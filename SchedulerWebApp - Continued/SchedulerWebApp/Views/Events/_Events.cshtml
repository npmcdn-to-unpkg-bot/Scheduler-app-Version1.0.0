@using System.Globalization
@model SchedulerWebApp.Models.Event

<div class="col-md-6 col-lg-4 col-xs-12 event-div masonry-item">
    <div class="thumbnail event-thumbnail">
        <div class="caption">
            <a class="anchor-div" href=@Url.Action("Details", "Events", new { id = Model.Id })>

                <div class="row image-row">
                    <div>
                        <img class=" img-responsive img-thumbnail center-block" alt="Map" />
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-sm-4 col-xs-6"><label>What</label></div>
                    <div class="col-sm-8 col-xs-6"><span>@Model.Title</span></div>
                </div>

                <div class="hidden-lg hidden-md hidden-sm">
                    <div class="row">
                        <div class="col-sm-4 col-xs-6"><label>Invited</label></div>
                        <div class="col-sm-8 col-xs-6">
                            <span class="badge">@Model.Participants.Count</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-xs-6"><label>Comming</label></div>
                        <div class="col-sm-8 col-xs-6"><span class="badge green-badge">@Model.Participants.Where(p => p.Availability).ToList().Count</span> </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-xs-6"><label>Not comming</label></div>
                        <div class="col-sm-8 col-xs-6"><span class="badge red-badge">@Model.Participants.Where(p => !(p.Availability)).ToList().Count</span></div>
                    </div>
                </div>

                <div class="row hidden-xs">
                    <div class="col-sm-4 hidden-xs">
                        <label>Invatee(s)</label>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                        <p class="text-center">
                            <span data-toggle="tooltip" data-placement="top" title="Invited" class="badge">@Model.Participants.Count</span>
                        </p>
                    </div>
                    <div class="col-sm-2 col-xs-4">
                        <p class="text-center">
                            <span data-toggle="tooltip" data-placement="top" title="Attending" class="badge green-badge">@Model.Participants.Where(p => p.Availability).ToList().Count</span>
                        </p>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                        <p class="text-center">
                            <span data-toggle="tooltip" data-placement="top" title="Not attending" class="badge red-badge">@Model.Participants.Where(p => !(p.Availability)).ToList().Count</span>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-4 col-xs-6"><label>Where</label></div>
                    <div class="col-sm-8 col-xs-6 "><span class="location">@Model.Location</span></div>
                </div>

                <div class="row">
                    <div class="col-sm-4 col-xs-6"><label>When</label></div>
                    <div class="col-sm-8 col-xs-6"><span>@Model.StartDate.GetValueOrDefault().ToString("d", new CultureInfo("de-CH"))</span></div>
                </div>



                <div class="row">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <p class="text-center  hidden-xs">
                            <a class="element-lightBlue eventPageIcons" href="@Url.Action( "Details", "Events", new { id = Model.Id })"><i data-toggle="tooltip" data-placement="top" title="Details" class="fa fa-info-circle"></i></a>
                        </p>
                        <a class="btn btn-info btn-block hidden-lg hidden-md hidden-sm" href="@Url.Action("Details", "Events", new { id = Model.Id })">Details</a>
                    </div>

                    <div class="col-md-4 col-sm-4 col-xs-12 button-padding-top-bottom">
                        <p class="text-center hidden-xs">
                            <a class="element-lightBlue eventPageIcons" href="@Url.Action("SendEventsInvitation", "Invitation", new { id = Model.Id })"><i data-toggle="tooltip" data-placement="top" title="Invite" class="fa fa-share-alt"></i></a>
                        </p>
                        <a class="btn btn-info btn-block hidden-lg hidden-md hidden-sm" href="@Url.Action("SendEventsInvitation", "Invitation", new { id = Model.Id })">Invite</a>
                    </div>

                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <p class="text-center  hidden-xs">
                            <a class="element-lightBlue eventPageIcons" href="@Url.Action("CopyEvent", "Events", new { id = Model.Id })"><i data-toggle="tooltip" data-placement="top" title="Copy" class="fa fa-files-o"></i></a>
                        </p>
                        <a class="btn btn-info btn-block hidden-lg hidden-md hidden-sm" href="@Url.Action("CopyEvent", "Events", new { id = Model.Id })">Copy</a>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>