@model SchedulerWebApp.Models.Event
@section styles
{
    @Styles.Render("~/Content/dataTablesStyles")
}

@{
    ViewBag.Title = Model.Title + " Details";
}

@Html.Partial("_GlobalPageHeader", ViewData["heading"] = @Model.Title + " details")


<section id="contact-section">
    <div class="container">

        <div class="row">
            <!--Participant column-->
            @Html.Partial("_ParticipantColumn")

            <div class="col-md-3 col-sm-4">
                <div class="block wow fadeInRight" data-wow-delay=".3s" data-wow-duration="500ms">
                    <h2 class="subtitle wow fadeInRight" data-wow-duration="500ms" data-wow-delay=".3s">Event</h2>
                    <div class="well well-sm event-details-well">
                        <!--Event Details Table-->
                        @Html.Partial("_EventTableDetails")
                    </div>
                    <!--Buttons-->
                    @Html.ActionLink("Invite", "SendEventsInvitation", "Invitation", new { id = Model.Id }, new { @class = "btn btn-info btn-block zero-radius" }) <br />
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info btn-block addButtonMargin zero-radius" }) <br />
                    @Html.ActionLink("Events", "Index", new { id = Model.Id }, new { @class = "btn btn-info btn-block addButtonMargin zero-radius" })<br />
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger btn-block addButtonMargin zero-radius" })

                </div>
            </div>

        </div>

    </div>
</section>



@section scripts
{
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/custom")
    <script type="text/javascript" src="~/Scripts/js-cookie/js.cookie.js"></script>
    <script type="text/javascript" src="~/Scripts/App/events.details.js"></script>
}
