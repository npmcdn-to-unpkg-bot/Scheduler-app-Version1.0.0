@model SchedulerWebApp.Models.Event
@section styles
{
    @Styles.Render("~/Content/dataTables")
}

@{
    ViewBag.Title = Model.Title + " Details";
}

<div class="col-md-8 col-md-offset-2">
    <h2 class="text-center-smallScreen">@Model.Title details</h2>
    <hr />
    @Html.Partial("_Details")
    
    <div class="row">
        <div class="col-sm-3  col-xs-12">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default btn-block addButtonMargin" })
        </div>
        <div class="col-sm-3  col-xs-12">
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-default btn-block addButtonMargin" })
        </div>
        <div class="col-sm-3  col-xs-12">
            @Html.ActionLink("Invite", "SendEventsInvitation", "Invitation", new { id = Model.Id }, new { @class = "btn btn-default btn-block addButtonMargin" })
        </div>
        <div class="col-sm-3  col-xs-12">
            @Html.ActionLink("Events", "Index", new { id = Model.Id }, new { @class = "btn btn-default btn-block addButtonMargin" })
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/custom")
    <script type="text/javascript">
        $(function () {
            makeTableResponsive("detailsTable", 1);

            grayOutAbsentees();
        });
    </script>
}
