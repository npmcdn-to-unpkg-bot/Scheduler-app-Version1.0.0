@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/dateTimePicker")

    <!--Bootstrap DateTimePicker Script-->
    <script type="text/javascript">

        $(function () {


                $('#datePickerStart').datetimepicker({ format: "DD.MM.YYYY" });
                $('#datePickerEnd').datetimepicker({
                    format: "DD.MM.YYYY",
                    useCurrent: true
                });

                linkStartAndEndDates();

                linkThreeDatesElements("datePickerStart", "datePickerEnd", "datePickerRemainder");

                linkThreeDatesElements("datePickerRemainder", "datePickerEnd", "datePickerList");


            function linkStartAndEndDates() {
                $('#datePickerStart').on("dp.change", function (e) {
                    $('#datePickerEnd').data("DateTimePicker").minDate(e.date);
                });

                $('#datePickerEnd').on("dp.change", function (e) {
                    $('#datePickerStart').data("DateTimePicker").maxDate(e.date);
                });
            }

            function linkThreeDatesElements(minDateElementId, maxDateElementId, dateElementId) {
                var minDate = '#' + minDateElementId, maxDate = '#' + maxDateElementId, date = '#' + dateElementId;

                $(minDate).on("dp.change", function (e) {
                    $(date).data("DateTimePicker").minDate(e.date);
                });

                $(maxDate).on("dp.change", function (e) {
                    $(date).data("DateTimePicker").maxDate(e.date);
                });

                $(date).datetimepicker({
                    format: "DD.MM.YYYY"
                });
            }
        });

        $.validator.addMethod('date', function (value, element) {
            var d = new Date();
            return this.optional(element) || !/Invalid|NaN/.test(new Date(d.toLocaleDateString(value)));
        });

    </script>

