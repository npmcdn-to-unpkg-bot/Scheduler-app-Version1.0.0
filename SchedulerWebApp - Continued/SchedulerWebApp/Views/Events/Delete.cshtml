@model SchedulerWebApp.Models.Event

@{
    ViewBag.Title = "Delete " + Model.Title;
}

@Html.Partial("_GlobalPageHeader", ViewData["heading"] = "Delete " + Model.Title)


<section id="contact-section">
    <div class="container">

        <div class="row">

            <div class=" col-md-offset-3 col-md-3 col-sm-4">
                <div class="block wow fadeInLeft" data-wow-delay=".3s" data-wow-duration="500ms">
                    <h2 class="subtitle wow fadeInLeft" data-wow-duration="500ms" data-wow-delay=".3s">Event</h2>
                    <div class="well well-sm event-details-well">
                        <!--Event Details Table-->
                        @Html.Partial("_EventTableDetails")
                    </div>

                </div>
            </div>

            <div class="col-md-3 col-sm-4">
                <div class="block wow fadeInRight" data-wow-delay=".3s" data-wow-duration="500ms">
                    <h2 class="subtitle wow fadeInRight" data-wow-duration="500ms" data-wow-delay=".3s">Note</h2>
                    <p class="text-danger">Detetig this event will delete it from list of your events.</p>
                    <p class="text-danger">This action cant be reversed! Are you sure you want to detele it?</p>

                    <!--Buttons-->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <button id="deleteEventBtn" type="submit" class="btn btn-danger btn-send  form-control zero-radius form_element-height">Confirm Delete</button> <br />
                        </div>
                        <div class="form-group">
                            @Html.ActionLink("Cancel", "Details", "Events", new { id = Model.Id }, new { @class = "btn form-control btn-info btn-block form_element-height zero-radius" })
                        </div>
                    }
                </div>
            </div>

        </div>

    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        onValidFormSubmit("deleteEventBtn", "deleting");
    </script>
}