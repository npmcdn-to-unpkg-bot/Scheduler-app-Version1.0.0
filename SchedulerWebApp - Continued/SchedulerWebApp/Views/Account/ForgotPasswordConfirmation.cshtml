@model string

@{
    ViewBag.Title = "Forgot Password Confirmation";
}
<style type="text/css">
    .center-div {
        margin-top: 10%;
        margin-bottom: 10%;
    }
</style>


@Html.Partial("_GlobalPageHeader", ViewData["heading"] = "Password confirmation")

<section id="contact-section">
    <div class="container">
        <div class="row center-div">
            <div class="col-md-6 col-md-offset-3">
                <div class="section-heading"></div>

                <div class="col-md-12">
                    <div class="text-center">
                        <h2 class="wow fadeInUp animated" data-wow-delay=".6s">Password link is sent</h2>
                        <p class="wow fadeInUp animated" data-wow-delay=".9s">We have sent the link to reset your password to <b>@ViewBag.userEmail</b>. Please check your email to reset your password</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>