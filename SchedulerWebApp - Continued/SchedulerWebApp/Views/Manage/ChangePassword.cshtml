@model SchedulerWebApp.Models.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@Html.Partial("_GlobalPageHeader", ViewData["heading"] = "Change password")

<section id="contact-section">
    <div class="container">
        <div class="row center-div">
            <div class="col-md-6 col-md-offset-3">
                <div class="section-heading"></div>

                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".3s">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.OldPassword, new { id = "oldPassword", @class = "form-control", placeholder = "Current password" })
                            <div id="oldPasswordIcon" class="input-group-addon zero-radius"><i class="glyphicon glyphicon-eye-open"></i></div>
                        </div>
                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".5s">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.NewPassword, new { id = "newPassword", @class = "form-control", placeholder = "New password" })
                            <div id="newPasswordIcon" class="input-group-addon zero-radius"><i class="glyphicon glyphicon-eye-open"></i></div>
                        </div>
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".7s">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { id = "confirmPassword", @class = "form-control", placeholder = "Repeat new password" })
                            <div id="confirmPasswordIcon" class="input-group-addon zero-radius"><i class="glyphicon glyphicon-eye-open"></i></div>
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group wow fadeInDown" data-wow-duration="500ms" data-wow-delay=".9s">
                        <button type="submit" class="btn btn-block btn-info zero-radius form_element-height">Change password</button>
                    </div>
                }

            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/custom")

    <script type="text/javascript">
        showHidePassword('#oldPasswordIcon', '#oldPassword');
        showHidePassword('#newPasswordIcon', '#newPassword');
        showHidePassword('#confirmPasswordIcon', '#confirmPassword');
    </script>
}
