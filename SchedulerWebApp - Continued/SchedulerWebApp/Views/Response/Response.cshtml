@model SchedulerWebApp.Models.ViewModels.ResponseViewModel

@{
    ViewBag.Title = "Response";
}

<div class="col-md-8 col-md-offset-2">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2>Response</h2>
        <div class="form-horizontal">
            <h4>Invitation</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                @Html.HiddenFor(model => model.EventId)
                @Html.HiddenFor(model => model.ParticipantId)
                @Html.HiddenFor(model => model.ParticipantEmail)
            </div>
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <p>
                        You have been invited to <strong>@Model.EventsTitle</strong>.
                        It will take place on <strong>@Model.EventDate.ToShortDateString()</strong> at <strong>@Model.EventDate.ToString("t")</strong> in <strong>@Model.EventsLocation.</strong>
                    </p>
                    <p>Please provide your availability below.</p>
                    <br />
                </div>

                <div class="col-sm-10 col-sm-offset-1">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Availability, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            <div class="input-group">
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Availability, true) I will attend
                                </label>
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.Availability, false) I won't attend
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Comments, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" class="btn btn-info btn-block" value="Send" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}