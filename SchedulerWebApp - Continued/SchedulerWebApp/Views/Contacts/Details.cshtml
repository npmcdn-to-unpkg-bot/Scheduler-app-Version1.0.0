@model SchedulerWebApp.Models.Contact

@{
    ViewBag.Title = "Details";
}

@Html.Partial("_GlobalPageHeader", ViewData["heading"] = @Model.FirstName + " " + Model.LastName + " details")


<section id="feature">
    <div class="container">
        <div class="section-heading"></div>
        <div class="row">
            @Html.Partial("_ContactDetailsIcon")
            <div class="col-md-4 col-xs-12">
                <div class="media wow fadeInDown animated" data-wow-duration="500ms" data-wow-delay="900ms">
                    @Html.Partial("_ContantDetails")
                    
                    <div class="row">
                        <div class="form-group">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ContactId }, new { @class = "btn btn-info btn-block" })
                        </div>
                        <div class="form-group ">
                            @Html.ActionLink("Go to List", "Index", null, new { @class = "btn btn-block btn-info" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>