@model SchedulerWebApp.Models.Contact

@{
    ViewBag.Title = "Delete";
}

<div class="col-md-8 col-md-offset-2">
    <h2>Delete</h2>

    <h3 class="text-danger">Are you sure you want to delete @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)?</h3>
    <div>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <table class="table table-condensed borderless">
                        <tbody>
                            <tr>
                                <td class="col-xs-6"><label>Name</label></td>
                                <td class="col-xs-6">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.Email)</td>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.PhoneNumber)</td>
                                <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                            </tr>
                            <tr>
                                <td><input type="submit" value="Delete" class="btn btn-danger btn-block" /></td>
                                <td>@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info btn-block" })</td>
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
            <div class="col-md-2"></div>
        </div>


    </div>
</div>
